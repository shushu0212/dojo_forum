<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><%= link_to "Replies count ▼", topics_path + '?order_by=rc' %></th>
      <th scope="col">Title</th>
      <th scope="col"><%= link_to "Last Replied at ▼", topics_path + '?order_by=lr' %></th>
      <th scope="col"><%= link_to "Viewed count ▼", topics_path + '?order_by=vc' %></th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
    <tr>
      <td style="text-align: center"><%= topic.comments_count %></td>
      <td><%= link_to topic.title, topic_path(topic) %></td>
      <td style="text-align: center"><%= topic.last_commnet_created_at.strftime("%Y-%m-%d") unless topic.last_commnet_created_at.blank?%></td>
      <td style="text-align: center"><%= topic.viewed_count %></td>
    </tr>
    <% end %>
  </tbody>
</table>
