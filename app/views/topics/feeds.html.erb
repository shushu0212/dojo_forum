<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <table class="table table-bordered table-dark" style="text-align: center">
        <thead>
          <tr>
            <th scope="col" width="33%">User</th>
            <th scope="col" width="33%">Post</th>
            <th scope="col" width="34%">Comment</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @all_users_count %></td>
            <td><%= @all_posts_count %></td>
            <td><%= @all_comments_count %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-sm-5 col-md-6">
      <h4>Chatterbox</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" width="10%"></th>
            <th scope="col" width="50%">mane</th>
            <th scope="col" width="40%">comments count</th>
          </tr>
        </thead>
        <tbody>
          <% n = 1 %>
          <% @users.each do |user| %>
              <tr> 
                <td scope="row"><%= n %></td>
                <td><%= link_to user.name, user_path(user) %></td>
                <td><%= user.comments_count %></td>
              </tr>
            <% n += 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
      <h4>Most Popular Post</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" width="10%"></th>
            <th scope="col" width="60%">title</th>
            <th scope="col" width="30%">Last Replied</th>
          </tr>
        </thead>
        <tbody>
          <% n = 1 %>
          <% @topics.each do |topic| %>
              <tr> 
                <th scope="row"><%= n %></th>
                <td><%= link_to topic.title, topic_path(topic) %></td>
                <td><%= topic.last_commnet_created_at.strftime("%Y-%m-%d") %></td>
              </tr>
            <% n += 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
