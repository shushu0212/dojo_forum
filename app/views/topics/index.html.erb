<div class="container">
  <h1>DojoForum</h1>
  <hr> 
  <div class="row">
    <nav class="nav nav-pills flex-column flex-sm-row">
      <%= link_to 'All', root_path, class:"flex-sm-fill text-sm-center nav-link active"%>
      <%= link_to '分類1', class:"flex-sm-fill text-sm-center nav-link" %>
      <%= link_to '分類2', class:"flex-sm-fill text-sm-center nav-link" %>
      <%= link_to '分類3', class:"flex-sm-fill text-sm-center nav-link" %>
      <%= link_to '分類4', class:"flex-sm-fill text-sm-center nav-link" %>
      <%= link_to '分類5', class:"flex-sm-fill text-sm-center nav-link" %>
    </nav> 
  </div><br>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th><%= link_to "Replies count", topics_path + '?order_by=rc' %></th>
            <th>Title</th>
            <th><%= link_to "Last Replied at", topics_path + '?order_by=lr' %></th>
            <th><%= link_to "Viewed count", topics_path + '?order_by=vc' %></th>
          </tr>
        </thead>
        <tbody>
          <% @topics.each do |topic| %>
          <tr>
            <td><%= topic.comments_count %></td>
            <td><%= link_to topic.title, topic_path(topic) %></td>
            <td><%= topic.last_commnet_created_at.strftime("%Y-%m-%d") unless topic.last_commnet_created_at.blank?%></td>
            <td><%= topic.viewed_count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <%= paginate @topics, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>
